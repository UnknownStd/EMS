@model EMS.Models.EmployeeInfoViewModel
@{
	ViewData["Title"] = "Delete Employee";
}
<h1>Departmetn Details</h1>
<br />
<table class="p-3">
	<tbody>
		<tr>
			<td class="px-3 fw-bold">Name:</td>
			<td>@Model.FirstName @Model.LastName</td>
		</tr>
		<tr>
			<td class="px-3 fw-bold">Address:</td>
			<td>@Model.Address</td>
		</tr>
		<tr>
			<td class="px-3 fw-bold">Email:</td>
			<td>@Model.Email</td>
		</tr>
		<tr>
			<td class="px-3 fw-bold">PhoneNo. :</td>
			<td>@Model.Phoneno</td>
		</tr>
		<tr>
			<td class="px-3 fw-bold">Gender:</td>
			@{
				if (Model.Gender == 1)
				{
					<td>Male</td>
				}
				else if (Model.Gender == 2)
				{
					<td>Female</td>
				}
				else
				{
					<td>Other</td>
				}
			}
	</tbody>
</table>
<form class="border-success" asp-controller="Employee" asp-action="Delete">

	<input asp-for="EmployeeId" style="display:none;" />
	<input type="submit" value="Delete" class="btn btn-dark my-3" />

</form>	
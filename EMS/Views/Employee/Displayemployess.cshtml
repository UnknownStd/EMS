@model EMS.Models.EmployeeInfoViewModel
@{
	ViewData["Title"] = "Employee Details";
	int count = 0;
}
<body class="bg-light">
	<div class="mt-5 card">
		<h1 class="bg-black text-light card-header py-4">Employee Data</h1>
		<table class="table card-body">
			<thead class="thead-dark">
				<tr>
					<th scope="col">Sno.</th>
					<th scope="col">First Name</th>
					<th scope="col">Last Name</th>
					<th scope="col">E-mail</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.EmployeeList)
				{
					<tr>
						<td scope="row">@(count = count + 1)</td>
						<td scope="row">@item.FirstName</td>
						<td scope="row">@item.LastName</td>
						<td scope="row">@item.Email</td>
						<td>
							<a href="~/Employee/Displaydata?EmployeeId=@item.EmployeeId">
								View Details
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</body>
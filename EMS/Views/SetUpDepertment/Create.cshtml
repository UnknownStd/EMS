@model EMS.Models.SetUpDepertmentViewModel
<a class="nav-link text-dark" asp-area="" asp-controller="SetUpDepertment" asp-action="DepartmentInfo">Depertment Info</a>
<h1>Department Information</h1>
<form asp-controller="SetUpDepertment" asp-action="Create" method="post">
<div class="row">
    <div class="col-sm-6">
        <label>Department Name</label>
        <input asp-for="DepartmentName" class="form-control" required/>
    </div>
    <div class="col-sm-6">
        <label>Department No</label>
        <input asp-for="DisplayNo" class="form-control"/>
    </div>
     <div class="col-sm-6">
            <input type="submit" class="btn btn-success mt-3"/>
    </div>
</div>
</form>